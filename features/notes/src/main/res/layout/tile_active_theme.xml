<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_card_root"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginHorizontal="22dp"
    android:layout_marginBottom="22dp"
    android:background="@drawable/bg_active_theme"
    tools:layout_height="160dp"
    tools:layout_width="match_parent">

    <ImageView
        android:id="@+id/secondary_color"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_adaptive_circle"
        android:contentDescription="@string/layout_theme_tile_secondary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theme_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="?attr/colorOnSurface"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Nord Theme" />

</androidx.constraintlayout.widget.ConstraintLayout>