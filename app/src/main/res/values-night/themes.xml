<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nots" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/black_surface</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:actionButtonStyle">@style/NotsActionButton</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/black_surface</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_black</item>
        <item name="postSplashScreenTheme">@style/Theme.Nots</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
</resources>