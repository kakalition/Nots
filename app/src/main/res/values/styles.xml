<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotsAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/white_surface</item>
        <item name="android:textColor">@color/black_surface</item>
        <item name="android:textColorPrimary">@color/black_surface</item>
    </style>

    <style name="DefaultDarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/default_dark_primary</item>
        <item name="colorOnPrimary">@color/default_dark_on_primary</item>
        <item name="colorSecondary">@color/default_dark_secondary</item>
        <item name="colorOnSecondary">@color/default_dark_on_secondary</item>
        <item name="colorSurface">@color/default_dark_surface</item>
        <item name="colorOnSurface">@color/default_dark_on_surface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>
        <item name="actionMenuTextColor">?attr/colorOnSurface</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="AzaleaTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/azalea_primary</item>
        <item name="colorOnPrimary">@color/azalea_on_primary</item>
        <item name="colorSecondary">@color/azalea_secondary</item>
        <item name="colorOnSecondary">@color/azalea_on_secondary</item>
        <item name="colorSurface">@color/azalea_surface</item>
        <item name="colorOnSurface">@color/azalea_on_surface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
    
    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>