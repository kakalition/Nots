<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.daggery.nots.home.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addViewNoteFragment"
            app:destination="@id/addViewNoteFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addViewNoteFragment"
        android:name="com.daggery.nots.home.view.AddViewNoteFragment"
        android:label="fragment_add_view_note"
        tools:layout="@layout/fragment_add_view_note">
        <argument
            android:name="uuid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.daggery.nots.home.view.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_themeSettingsFragment"
            app:destination="@id/themeSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/themeSettingsFragment"
        android:name="com.daggery.nots.settings.view.ThemeSettingsFragment"
        android:label="ThemeSettingsFragment" >
        <action
            android:id="@+id/action_themeSettingsFragment_to_viewThemeFragment"
            app:destination="@id/previewThemeFragment" />
    </fragment>
    <fragment
        android:id="@+id/previewThemeFragment"
        android:name="com.daggery.nots.settings.theme.view.PreviewThemeFragment"
        android:label="fragment_view_theme"
        tools:layout="@layout/fragment_preview_theme" >
        <argument
            android:name="themeEnum"
            app:argType="com.daggery.nots.utils.ThemeEnum"
            android:defaultValue="DEFAULT_DARK" />
    </fragment>
</navigation>